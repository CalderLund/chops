{
  "name": "guitar-teacher",
  "version": "1.0.0",
  "description": "CLI for adaptive guitar practice assignments",
  "type": "module",
  "bin": {
    "chops": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:web": "cd web && npm run build",
    "dev": "tsx src/cli.ts",
    "dev:web": "cd web && npm run dev",
    "serve": "tsx src/server.ts",
    "dev:up": "bash dev.sh",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run tests/integration",
    "test:unit": "vitest run tests/unit",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:web": "cd web && eslint .",
    "lint:all": "npm run lint && npm run lint:web",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@hono/node-server": "^1.13.0",
    "better-sqlite3": "^11.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "enquirer": "^2.4.1",
    "hono": "^4.6.0",
    "js-yaml": "^4.1.0",
    "open": "^10.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.9",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "fast-check": "^3.15.0",
    "prettier": "^3.8.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.54.0",
    "vitest": "^1.2.0"
  }
}
